<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Account - <%= appName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
      .glass-card {
        background: rgba(31, 41, 55, 0.7);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
      }
      .glass-card:hover {
        transform: translateY(-4px);
        border-color: rgba(59, 130, 246, 0.5);
        box-shadow: 0 10px 30px -10px rgba(59, 130, 246, 0.3);
      }
      .gradient-bg {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
      }
      .gradient-text {
        background: linear-gradient(135deg, #60a5fa, #3b82f6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }
      .settings-card {
        background: rgba(30, 41, 59, 0.5);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(71, 85, 105, 0.2);
        transition: all 0.3s ease;
      }
      .settings-card:hover {
        border-color: rgba(96, 165, 250, 0.5);
        box-shadow: 0 0 20px rgba(96, 165, 250, 0.1);
      }
      .btn-primary {
        background: rgba(59, 130, 246, 0.2);
        border: 1px solid rgba(59, 130, 246, 0.3);
        padding: 0.5rem 1.5rem;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
      }
      .btn-primary:hover {
        background: rgba(59, 130, 246, 0.3);
        border-color: rgba(59, 130, 246, 0.4);
        transform: translateY(-1px);
      }
      .btn-secondary {
        background: rgba(59, 130, 246, 0.15);
        border: 1px solid rgba(59, 130, 246, 0.25);
        padding: 0.5rem 1.5rem;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
      }
      .btn-secondary:hover {
        background: rgba(59, 130, 246, 0.25);
        border-color: rgba(59, 130, 246, 0.35);
      }
      .btn-danger {
        background: rgba(239, 68, 68, 0.2);
        border: 1px solid rgba(239, 68, 68, 0.3);
        padding: 0.5rem 1.5rem;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
      }
      .btn-danger:hover {
        background: rgba(239, 68, 68, 0.3);
        border-color: rgba(239, 68, 68, 0.4);
        transform: translateY(-1px);
      }
      .text-muted {
        color: rgba(255, 255, 255, 0.6);
      }
      .verification-input {
        width: 3rem;
        height: 3rem;
        font-size: 1.5rem;
        text-align: center;
      }
.toggle-checkbox {
  appearance: none;
  width: 2.5rem;
  height: 1.4rem;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 9999px;
  position: relative;
  transition: all 0.3s ease;
  cursor: pointer;
}

.toggle-checkbox::before {
  content: "";
  position: absolute;
  left: 0.2rem;
  top: 0.2rem;
  width: 1rem;
  height: 1rem;
  background-color: white;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.toggle-checkbox:checked {
  background-color: #3b82f6;
}

.toggle-checkbox:checked::before {
  transform: translateX(1.1rem);
}
    </style>
  </head>

  <body class="gradient-bg text-white min-h-screen flex flex-col sm:ml-64">
    <!-- Sidebar -->
    <%- include('../../components/sidebar') %>

    <div class="flex-grow p-8">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold gradient-text mb-8">Settings</h1>

        <div class="space-y-6">
          <div class="glass-card rounded-xl p-6">
            <h2 class="text-xl font-semibold mb-6">General</h2>
            <form action="/web/admin/settings" method="POST" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label class="block text-sm font-medium mb-2">
                    Company Name
                  </label>
                  <input
                    type="text"
                    name="name"
                    value="<%= appName %>"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium mb-2">
                    Default Language [SOON]
                  </label>
                  <select
                    name="defaultLanguage"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                   
                  >
                    <option>English</option>
                  </select>
                </div>
                <div>
                  <label class="block text-sm font-medium mb-2"
                    >HostName [SOON]</label
                  >
                  <input
                    type="text"
                    name="companyName"
                    value="localhost"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium mb-2">
                    Production Mode [SOON]
                  </label>
                  <select
                    name="defaultLanguage"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  >
                    <option>True</option>
                    <option>False (debug)</option>
                  </select>
                </div>
                <div>
                  <label class="block text-sm font-medium mb-2"
                    >Flavicon [SOON]</label
                  >
                  <input
                    type="text"
                    name="companyName"
                    value="/public/img/favicon.png"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium mb-2">
                    Theme [SOON]
                  </label>
                  <select
                    name="defaultLanguage"
                    class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  >
                    <option>LumenOne Dark</option>
                    <option>LumenOne Light (soon)</option>
                    <option>Pleski (soon)</option>
                    <option>Prototype (soon)</option>
                  </select>
                </div>

            </div>

              </div>
              <div class="flex justify-end">
                <button
                  type="submit"
                  class="btn-primary px-6 py-3 rounded-lg text-blue-300 text-sm font-medium"
                >
                  Save
                </button>
              </div>
            </form>

            <!-- API Token Section -->
<div class="glass-card rounded-xl p-6">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-xl font-semibold">API Tokens</h2>
    <button
      onclick="document.getElementById('apiModal').classList.remove('hidden')"
      class="btn-primary text-sm"
    >
      Create API Token
    </button>
  </div>

  <p class="text-muted mb-4">Manage your personal API tokens for accessing the platform.</p>

  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4 text-sm text-muted">
    <p>No tokens created yet.</p>
  </div>
</div>


          </div>
        </div>
      </div>
    </div>

<!-- Modal for Creating API Token -->
<div
  id="apiModal"
  class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center z-50 hidden"
>
  <div class="bg-gray-900 p-6 rounded-xl w-full max-w-xl shadow-xl border border-gray-700">
    <h3 class="text-2xl font-semibold mb-4">Create API Token</h3>
    <form id="apiTokenForm" class="space-y-6">
      <!-- Description -->
      <div>
        <label class="block text-sm font-medium mb-1" for="description">Description</label>
        <input
          id="description"
          name="description"
          type="text"
          placeholder="e.g. LumenBot backups"
          required
          class="w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- Permissions -->
      <div>
        <label class="block text-sm font-medium mb-2">Permissions</label>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Category 1 -->
          <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
            <p class="font-semibold text-sm mb-2">Websites</p>
            <div class="space-y-2">
              <label class="flex items-center justify-between">
                <span>View Website</span>
                <input type="checkbox" name="view_website" value="1" class="toggle-checkbox" />
              </label>
              <label class="flex items-center justify-between">
                <span>Delete Website</span>
                <input type="checkbox" name="delete_website" value="1" class="toggle-checkbox" />
              </label>
              <label class="flex items-center justify-between">
                <span>Create Website</span>
                <input type="checkbox" name="create_website" value="1" class="toggle-checkbox" />
              </label>
            </div>
          </div>

          <!-- Category 2 -->
          <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
            <p class="font-semibold text-sm mb-2">Users</p>
            <div class="space-y-2">
              <label class="flex items-center justify-between">
                <span>View Users</span>
                <input type="checkbox" name="view_users" value="1" class="toggle-checkbox" />
              </label>
              <label class="flex items-center justify-between">
                <span>Modify Users</span>
                <input type="checkbox" name="modify_users" value="1" class="toggle-checkbox" />
              </label>
              <label class="flex items-center justify-between">
                <span>Delete Users</span>
                <input type="checkbox" name="delete_users" value="1" class="toggle-checkbox" />
              </label>
              <label class="flex items-center justify-between">
                <span>Create Users</span>
                <input type="checkbox" name="create_users" value="1" class="toggle-checkbox" />
              </label>
            </div>
          </div>
        </div>
      </div>

      <!-- Buttons -->
      <div class="flex justify-end space-x-3 pt-2">
        <button
          type="button"
          onclick="document.getElementById('apiModal').classList.add('hidden')"
          class="btn-secondary"
        >
          Cancel
        </button>
        <button type="submit" class="btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>


    <%- include('../../components/footer') %>
    <script src="/js/sidebar.js"></script>
  </body>
</html>
